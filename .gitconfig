[user]
  email = tobias.schottdorf@gmail.com
  name = Tobias Schottdorf
[push]
  default = simple
[color]
  ui = true
[core]
  editor = vim
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  ca = commit --amend --no-edit --reset-author
  rbo = rebase origin/master
  rbc = rebase --continue
  rbl = rebase -i HEAD~10
  hr = reset --hard
  pr = pull --rebase
  smu = submodule update --init --recursive
  aa = add -A
  wc = whatchanged
  fap = fetch --all --prune

[branch]
  autosetuprebase = always
